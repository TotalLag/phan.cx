---
// Link.astro
const { text, link, request } = Astro.props;
const active = request.route === link.replace(/\//g, '');
---

<a
  href={link}
  class={`flex items-center px-4 py-2 mt-2 text-gray-600 transition-colors duration-200 transform rounded-md hover:bg-gray-200 hover:text-gray-700 ${
    active ? 'bg-gray-200 text-gray-700' : ''
  }`}
>
  <slot />
  <span class="mx-4 font-medium">{text}</span>
</a>